<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/text_inches"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/jog_inches"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:minWidth="48dp"
            android:minHeight="48dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/jog_xy_step_seek_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="XY_Step_Value:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/jog_xy_step_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="4dp"
        android:paddingHorizontal="8dp"
        android:stretchColumns="*"
        tools:ignore="ObsoleteLayoutParam">

        <TableRow tools:ignore="UselessParent">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_0.1"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_0.1"
                android:text="XY: 0.1"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_0.5"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_0.5"
                android:text="XY: 0.5"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_1"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_1"
                android:text="XY: 1"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow tools:ignore="UselessParent">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_5"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_5"
                android:text="XY: 5"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_10"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_10"
                android:text="XY: 10"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_xy_step_50"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_xy_step_50"
                android:text="XY: 50"
                tools:ignore="HardcodedText" />

        </TableRow>

    </TableLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/jog_z_step_seek_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Z_Step_Value:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/jog_z_step_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="4dp"
        android:paddingHorizontal="8dp"
        android:stretchColumns="*"
        tools:ignore="ObsoleteLayoutParam">

        <TableRow tools:ignore="UselessParent">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_0.01"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_0.01"
                android:text="Z: 0.01"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_0.05"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_0.05"
                android:text="Z: 0.05"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_0.1"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_0.1"
                android:text="Z: 0.1"
                tools:ignore="HardcodedText" />

        </TableRow>

        <TableRow tools:ignore="UselessParent">

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_0.5"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_0.5"
                android:text="Z: 0.5"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_1"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_1"
                android:text="Z: 1"
                tools:ignore="HardcodedText" />

            <com.joanzapata.iconify.widget.IconButton
                android:id="@+id/jog_z_step_5"
                android:layout_width="0dp"
                android:layout_weight="0.3333"
                android:tag="@string/preference_jog_z_step_5"
                android:text="Z: 5"
                tools:ignore="HardcodedText" />

        </TableRow>

    </TableLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        android:background="@color/colorDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <TextView
            android:id="@+id/jog_feed_seek_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Feed_Step_Value:"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <SeekBar
            android:id="@+id/jog_feed_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp" />

    </LinearLayout>

</LinearLayout>