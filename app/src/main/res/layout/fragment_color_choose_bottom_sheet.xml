<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_ffffff_topradius30"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".fragment.WifiChooseBottomSheetFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="选择颜色"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <com.shixia.colorpickerview.ColorPickerView
        android:id="@+id/cpv_color_picker"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_green_1e853a_r10"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_green_1e853a_r10"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="16sp" />


    </LinearLayout>




</LinearLayout>