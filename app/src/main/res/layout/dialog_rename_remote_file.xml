<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_ffffff_r10"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="重命名文件"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold" />

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/bg_gray_e6e6e6_r10"
       android:padding="10dp"
       android:layout_marginTop="20dp">

       <EditText
           android:id="@+id/dialog_rename_remote_file_new_file_name"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="@null"
           android:hint="请输入新的文件名字"
           android:textColor="@color/colorBlack"
           android:textColorHint="#676767"
           android:textSize="15sp" />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_rename_remote_file_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:background="@drawable/bg_gray_999999_r10"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/dialog_rename_remote_file_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/bg_green_1e853a_r10"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorWhite"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>