<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rg_tool"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white_ffffff_topradius30"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    tools:context=".fragment.WifiChooseBottomSheetFragment">

    <RadioButton
        android:id="@+id/rb_tool_pen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_pen_black"
        android:drawablePadding="5dp"
        android:text="画笔"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rb_tool_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_line_black"
        android:drawablePadding="5dp"
        android:text="直线"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rb_tool_triangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_triangle_black"
        android:drawablePadding="5dp"
        android:text="三角形"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rb_tool_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_rectangle_black"
        android:drawablePadding="5dp"
        android:text="矩形"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rb_tool_circle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_circle_black"
        android:drawablePadding="5dp"
        android:text="圆形"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <RadioButton
        android:id="@+id/rb_tool_eraser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/step_setup_bg_color_selector"
        android:button="@null"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingVertical="10dp"
        android:drawableTop="@drawable/icon_tool_eraser_black"
        android:drawablePadding="5dp"
        android:text="橡皮擦"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />





</RadioGroup>